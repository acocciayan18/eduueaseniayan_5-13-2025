<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/identification_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ayan_bg3"
    android:padding="16dp"
    app:ignore="NamespaceTypo">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/quizzes_recycler_view"
        android:layout_width="232dp"
        android:layout_height="17dp"
        android:padding="16dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_container"
        app:layout_editor_absoluteX="163dp"
        app:layout_editor_absoluteY="723dp" />

    <TextView
        android:id="@+id/identification_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:fontFamily="@font/poppinsmedium"
        android:gravity="center"
        android:text="Loading questions..."
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_editor_absoluteX="16dp"
        card_view:layout_constraintBottom_toTopOf="@+id/identification_answer" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submit_identification_button"
        android:layout_width="170dp"
        android:layout_height="55dp"
        android:layout_marginBottom="216dp"
        android:background="@drawable/ayan_submit_bg"
        android:fontFamily="@font/poppinsbold"
        android:text="SUBMIT"
        android:textColor="#ffffff"
        android:textSize="19sp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.497"
        card_view:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/identification_answer"
        android:layout_width="337dp"
        android:layout_height="55dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/poppinsmedium"
        android:hint="Type your answer here"
        android:padding="12dp"
        android:gravity="center"
        android:textSize="16sp"
        card_view:layout_constraintBottom_toTopOf="@+id/submit_identification_button"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
